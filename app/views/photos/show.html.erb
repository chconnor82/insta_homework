<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image</dt>
  <dd><img src= "<%= @photo.image_url %>" width="200"></dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>
</dl>


<ul class="media-list">
  <% @photo.comments.each do |comment| %>
  <li class="media">
    <a class="pull-left" href="#">
      <img class="media-object" src="https://graph.facebook.com/rbetina/picture" alt="...">
    </a>
    <div class="media-body">
      <h4 class="media-heading">Comment</h4>
      <%= comment.content %>
    </div>
  </li>
  <% end %>
</ul>

<form action="http://localhost:3000/create_comment" <div class="form-group">
  <div>
    <label for="content">Create Comment:</label>
    <input id="content" type="text" name="content">
  </div>
    <div>
    <input type="hidden" id="photo_id" type="text" name="photo_id" value="<%= @photo.id %>">
  </div>
  <div>
    <input type="hidden" id="user_id" type="text" name="user_id" value="<%= @photo.user_id%>">
  </div>
  <div>
    <input type="submit" value="Create Comment" class="btn btn-primary">
  </div>
</form>



